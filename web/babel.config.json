{
  "presets": [
    "@babel/preset-typescript",
    [
      "@babel/preset-env",
      {
        "targets": "since 2020",
        "loose": true
      }
    ],
    ["@babel/preset-react", { "runtime": "automatic" }]
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "alias": {
          "@": "../app/src"
        }
      }
    ],
    "react-native-web",
    "react-native-reanimated/plugin"
  ]
}
